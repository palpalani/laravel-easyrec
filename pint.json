
{
    "preset": "laravel",
    "rules": {
        "@PER:CS": true,
        "@PER-CS:risky": true,
        "@PHP80Migration": true,
        "@PHP81Migration": true,
        "@PHP82Migration": true,
        "blank_line_before_statement": true,
        "concat_space": {
            "spacing": "one"
        },
        "method_argument_space": true,
        "ordered_class_elements": {
          "order": [
            "use_trait",
            "case",
            "constant",
            "constant_public",
            "constant_protected",
            "constant_private",
            "property_public",
            "property_protected",
            "property_private",
            "construct",
            "destruct",
            "magic",
            "phpunit",
            "method_abstract",
            "method_public_static",
            "method_public",
            "method_protected_static",
            "method_protected",
            "method_private_static",
            "method_private"
          ]
        },
        "single_trait_insert_per_statement": true
    }
}
